<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="com.trolltech.qtdesigner"
   name="QtDesigner Plug-in"
   version="1.0.0"
   provider-name=""
   class="com.trolltech.qtdesigner.QtDesignerPlugin">

   <runtime>
      <library name="QtDesigner.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.core.resources"/>
   </requires>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Qt Designer"
            extensions="ui"
            icon="icons/designer.gif"
            contributorClass="com.trolltech.qtdesigner.editors.DesignerActionBarContributor"
            class="com.trolltech.qtdesigner.editors.UiEditor"
            id="com.trolltech.qtdesigner.editors.UiEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Qt"
            id="qtViews"/>
      <view
            allowMultiple="false"
            icon="icons/designer.gif"
            class="com.trolltech.qtdesigner.views.WidgetBoxView"
            category="qtViews"
            name="Qt Widget Box"
            id="com.trolltech.qtdesigner.views.widgetboxview"/>
      <view
            allowMultiple="false"
            icon="icons/designer.gif"
            class="com.trolltech.qtdesigner.views.PropertyEditorView"
            category="qtViews"
            name="Qt Property Editor"
            id="com.trolltech.qtdesigner.views.propertyeditorview"/>
      <view
            allowMultiple="false"
            icon="icons/designer.gif"
            class="com.trolltech.qtdesigner.views.ObjectInspectorView"
            category="qtViews"
            name="Qt Object Inspector"
            id="com.trolltech.qtdesigner.views.objectinspectorview"/>
      <view
            allowMultiple="false"
            category="qtViews"
            class="com.trolltech.qtdesigner.views.ActionEditorView"
            icon="icons/designer.gif"
            id="com.trolltech.qtdesigner.views.actioneditorview"
            name="Qt Action Editor"/>
      <view
            allowMultiple="false"
            category="qtViews"
            class="com.trolltech.qtdesigner.views.ResourceEditorView"
            icon="icons/designer.gif"
            id="com.trolltech.qtdesigner.views.resourceeditorview"
            name="Qt Resource Editor"/>
      <view
            allowMultiple="false"
            category="qtViews"
            class="com.trolltech.qtdesigner.views.SignalSlotEditorView"
            icon="icons/designer.gif"
            id="com.trolltech.qtdesigner.views.signalsloteditorview"
            name="Qt Signal Slot Editor"/>
   </extension>

</plugin>
