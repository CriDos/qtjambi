<project name="qtjambi.clean">
    <!--
        CLEAN TARGETS
    -->

    <available file="Makefile" type="file" property="global.makefile.present"/>
    <available file="juic/Makefile" type="file"
        property="juic.makefile.present"/>
    <available file="generator/Makefile" type="file"
        property="generator.makefile.present"/>

    <target name="make.clean.global" if="global.makefile.present"
        depends="init">
        <make target="clean"/>
        <delete file="Makefile"/>
        <delete>
            <fileset dir=".">
                <include name="**/Makefile*"/>
                <exclude name="juic/Makefile*"/>
                <exclude name="generator/Makefile*"/>
                <exclude name="generator/debug/***"/>
                <exclude name="generator/release/***"/>
            </fileset>
        </delete>
    </target>

    <target name="make.clean.juic" if="juic.makefile.present"
        depends="init">
        <make dir="juic" target="clean"/>
        <delete>
            <fileset dir="juic">
                <include name="Makefile*"/>
                <include name="*.o"/>
                <include name="juic"/>
            </fileset>
        </delete>
    </target>

    <target name="make.clean.generator" if="generator.makefile.present"
        depends="init">
        <make dir="generator" target="clean"/>
        <delete>
            <fileset dir="generator">
                <include name="Makefile*"/>
                <include name="generator"/>
                <include name="mjb_*.log"/>
                <include name=".preprocessed.tmp"/>
            </fileset>
        </delete>
    </target>

    <target name="clean" description="Cleans everything"
        depends="make.clean.global, make.clean.generator, make.clean.juic">
        <delete quiet="true">
            <fileset dir="${generator.xmlmerge.outputdir}" includes="*.xml"/>
        </delete>
        <delete dir="${java.outdir}" quiet="true"/>
        <delete dir="${java.generated.srcdir}" quiet="true"/>
        <delete dir="${generator.outputdir}" quiet="true"/>
        <delete dir="bin" quiet="true"/>
        <delete dir="lib" quiet="true"/>
        <delete dir="cpp" quiet="true"/>
        <delete quiet="true">
            <fileset dir=".">
                <include name="plugins/**/*"/>
                <exclude name="plugins/qtjambi/**/*"/>
                <include name="*.jar"/>
            </fileset>
        </delete>
        <delete file="${java.srcdir}/qtjambi/version.properties" quiet="true"/>
        <delete dir="${outputDir}/platform-output" quiet="true"/>
        <delete file="qtjambi-${qtjambi.version}-src.zip" quiet="true"/>
        <delete dir="build" quiet="true"/>
    </target>

    <target name="distclean" description="Cleans really everything"
        depends="clean">
        <delete dir="${jardir}" quiet="true"/>
        <delete dir="${timestamp.dir}" quiet="true"/>
        <delete dir="extjars" quiet="true"/>
    </target>
</project>